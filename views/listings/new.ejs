<%- layout("/layouts/boilerpalte.ejs") %>

    <div class="row">
        <div class="col-8 offset-2">
            <h4 class="mt-4 mb-4">Fill the form</h4>
            <form action="/listings" method="post">
                <div class="mb-4">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control">
                </div>
                <div class="mb-4">
                    <label for="description" class="form-label">Enter description</label>
                    <textarea rows="5" name="listing[description]" placeholder="Enter description"
                        class="form-control"></textarea>
                </div>
                <div class="mb-4">
                    <label for="image" class="form-label">Enter Link</label>
                    <input type="text" name="listing[image]" placeholder="Enter image/Link" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-4 col-md-4">
                        <label for="price" class="form-label">Enter Price</label>
                        <input type="text" name="listing[price]" placeholder="Enter Price" class="form-control">
                    </div>
                    <div class="mb-4 col-md-8">
                        <label for="country" class="form-label">Enter Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control">
                    </div>
                </div>
                <div class="mb-4">
                    <label for="location" class="form-label">Title</label>
                    <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control">
                </div>
                <button type="submit" class="btn btn-dark add-btn">Add</button>
            </form>
        </div>
    </div>